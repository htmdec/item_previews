.g-widget-item-preview

  h4
    a.g-item-preview-link(data-id=item.id)= item.name()

  each content in contents
    if content.type==='image'
      div
        img(src=content.value)

    else if content.type==='json'
      textarea.json(data-id=item.id)= JSON.stringify(content.value, null, '\t')

    else if content.type==='video'
      video(controls autoplay name=item.name())
        source(src=content.value type='video/webm')
