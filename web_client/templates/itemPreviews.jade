.g-widget-item-previews-header
  i.icon-eye
  |  Item Previews

.g-widget-item-previews-container

  each item in items

    .g-widget-item-preview

      - var name = item.get('name')

      - if (isImageItem(item))
        a.g-item-preview-link(data-id="#{item.get('_id')}")
          img(src="#{item.downloadUrl()}")

      - else if (isJSONItem(item))
        .panel.panel-default
          .panel-heading
            h4
              a.g-item-preview-link(data-id="#{item.get('_id')}")
                | #{name}
          .panel-body
            textarea.form-control.json(data-id="#{item.get('_id')}")
