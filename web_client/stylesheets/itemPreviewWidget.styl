$maxPreviewHeight = 300px


.g-widget-item-previews-header
  background-color #f0f0f0
  color #555
  font-size 16px
  font-weight bold
  margin-top 10px
  margin-bottom 10px
  padding 5px 6px

.g-widget-item-previews-container
  max-height 400px
  overflow-x auto
  white-space nowrap
  &.g-wrap
    white-space normal

.g-widget-item-preview
  margin 0 10px 10px 10px
  padding-bottom 5px
  border-bottom 1px solid #eee

.g-widget-item-previews-container img
  max-height $maxPreviewHeight
  border-radius 5px
  width auto

.g-widget-item-previews-container .json
  background-color #f5f5f5
  border-radius 4px
  border 1px solid #ccc
  color #333
  height $maxPreviewHeight
  width 30%
  resize both
  white-space pre-wrap
